            <button type="submit" style="height:45px; width:100px; border-radius:10px;" name="submit" value="submit">Submit</button> 
        </form>
    </div>
    <section style="display:flex; margin-top:50px;">
        <div class="section">
            <h1 style="text-align:center;">Starbucks</h1>
            <p style="text-align:center;">Get 30% off on Drinks above Rs.350</p>
            <form>
                <input type="button" id="btn" value="Redeem Now" style="height:40px; width:200px; background-color:white; border-radius:20px; margin-left:70px;">
            </form>
        </div>
        <div class="section">
                <h1 style="text-align:center;">Zomato</h1>
                <p style="text-align:center;">Get 60% off on Food or Drinks worth Rs.450 or above.</p>
                <form>
                    <input type="button" id="btn" value="Redeem Now" style="height:40px; width:200px; background-color:white; border-radius:20px; margin-left:70px;">
                </form>
        </div>
        <div class="section">
                <h1 style="text-align:center;">Channel</h1>
